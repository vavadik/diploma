<% @media.each do |m| %>
	<div class="imgprev pull-left" media=<%= m.id %>><img src="<%= m.data %>" alt="data" /></div>
<% end %>

<div id='galleryModal' class="modal hide fade mediaprev">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="modalHeader">Modal header</h3>
    </div>
    <div class="modal-body">
    	<img src="" alt='image' />
        <hr>
        <p id="desc"></p>
    </div>
    <div class="modal-footer">
        <a href="#" target="_blank" class="btn btn-success">Open image</a>
        <button class='btn' data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>