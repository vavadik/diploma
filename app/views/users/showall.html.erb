<table class="table table-striped table-hover table-bordered table-condensed">
	<thead>
		<tr>
		    <th>Name</th>
		    <th>Email</th>
		    <th>Password hash</th>
		</tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
    	<tr>
    		<td><%= user.name %></td>
    		<td><%= user.email %></td>
    		<td><%= user.password %></td>
    	</tr>
    	<% end %>
    </tbody>
</table>
<%= link_to 'Add user', :users_add, :class => 'btn btn-success pull-right' %>