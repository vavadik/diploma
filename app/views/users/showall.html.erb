<table class="table table-striped table-hover table-bordered table-condensed">
	<thead>
		<tr>
		    <th>Name</th>
		    <th>Email</th>
		</tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
    	<tr class='userInfo' user="<%= user.id %>">
    		<td><%= user.name %></td>
    		<td><%= user.email %></td>
    	</tr>
    	<% end %>
    </tbody>
</table>
<%= link_to 'Add user', :users_add, :class => 'btn btn-success' %>
<div id='userModal' class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="modalHeader">Modal header</h3>
  </div>
  <div class="modal-body">
    <dl class="dl-horizontal">
      <dt>Pass hash</dt>
      <dd><p id="userPassword">One fine body…</p></dd>
      <dt>Mail</dt>
      <dd><p id="userMail">One fine body…</p></dd>
    </dl>
  </div>
  <div class="modal-footer">
    <button class='btn' data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>