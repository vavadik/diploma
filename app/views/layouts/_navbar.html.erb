<div class="row-fluid">
	<div class="navbar">
	    <div class="navbar-inner navbar-static-top">
			<%= link_to 'Home', :root, :class => 'brand offset1' %>
			<ul class = 'nav'>
				<% navigation_bar(navbar).each do |link| %>
					<li class="<%= link[:class] %>"><%= link_to link[:text], link[:link] %></li>
				<% end %>
			</ul>
			<div class='pull-right logininfo'>
				<% if current_user %>
					<p class='text-info'>
						Logged in as <%= current_user.name %> <%= link_to :logout, :logout, :class => 'btn btn-small btn-inverse' %>
					</p>
				<% else %>
					<%= render 'layouts/form_login' %>
				<% end %>
			</div>
	    </div>
	</div>
</div>